.mainLeft{
    width: 160rpx;
    height:100%;
}
.main{
    height:calc( 100vh - 80rpx );
    display:flex;
}
.mainRight{
    flex:1;
}
.leftItem{
    padding:10rpx 0;
    background-color:#f4f4f4;
    color: #666;
    font-size: 28rpx;
    text-align: center;
    border-bottom:2rpx solid #ccc;
    box-sizing: border-box;
}
.leftItem .inside{
    border-left:8rpx solid #f4f4f4;
}
.leftItem.active{
    background-color:#fff;
}
.leftItem.active .inside{
    color: #ff0000;
    background-color:#fff;
    border-left:8rpx solid #ff0000;
}
.firstItem{
    margin-bottom: 28rpx;
}
.firstItem .titelRight{
    text-align:center;
    color: #666;
    font-size: 48rpx;
    line-height: 50rpx;
}
.firstItem .listRight{
    display:flex;
    flex-wrap: wrap;
}
.firstItem .listRight .secondItem{
    width:33.33%;
    padding: 10rpx;
    box-sizing:border-box;
    text-align:center;
    color: #666;
    font-size: 26rpx;
}
.listRight .secondItem .listImg{
    width:100%;
}